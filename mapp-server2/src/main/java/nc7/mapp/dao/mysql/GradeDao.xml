<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.mapp.dao.GradeDao">

  <!-- 모든 등급 정보 조회 -->
  <select id="findAll" resultMap="gradeMap">
    SELECT * FROM grade
  </select>
  
  <!-- 등급 정보 조회 by 등급 번호 -->
  <select id="findByNo" parameterType="int" resultMap="gradeMap">
    SELECT * FROM grade WHERE grade_no = #{gradeNo}
  </select>
  
  <!-- resultMap 정의 -->
  <resultMap type="grade" id="gradeMap">
    <id column="grade_no" property="gradeNo" />
    <result column="name" property="name" />
    <result column="add_at" property="addAt" />
  </resultMap>
</mapper>
