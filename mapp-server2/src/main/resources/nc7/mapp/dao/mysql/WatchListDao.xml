<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.mapp.dao.WatchListDao">

  <!-- 관심 목록 추가 -->
  <insert id="insert" parameterType="nc7.mapp.vo.WatchList">
    INSERT INTO watch_lists (users_no, films_no)
    VALUES (#{usersNo}, #{filmsNo})
  </insert>

  <!-- 특정 사용자의 관심 목록 조회 -->
  <select id="findByUserId" parameterType="int" resultMap="watchListMap">
    SELECT * FROM watch_lists WHERE users_no = #{userId}
  </select>

  <!-- 특정 영화의 관심 목록 조회 -->
  <select id="findByFilmsNo" parameterType="int" resultMap="watchListMap">
    SELECT * FROM watch_lists WHERE films_no = #{filmsNo}
  </select>

  <!-- 관심 목록 삭제 -->
  <delete id="delete" parameterType="nc7.mapp.vo.WatchList">
    DELETE FROM watch_lists WHERE users_no = #{usersNo} AND films_no = #{filmsNo}
  </delete>

  <!-- resultMap 정의 -->
  <resultMap type="nc7.mapp.vo.WatchList" id="watchListMap">
    <id property="usersNo" column="users_no" />
    <id property="filmsNo" column="films_no" />
  </resultMap>
</mapper>
