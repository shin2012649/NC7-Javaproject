<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.mapp.dao.ManagerDao">

  <!-- 모든 매니저 정보 조회 -->
  <select id="findAll" resultMap="managerMap">
    SELECT * FROM manager
  </select>
  
  <!-- 매니저 정보 조회 by 사용자 번호 -->
  <select id="findByUserNo" parameterType="int" resultMap="managerMap">
    SELECT * FROM manager WHERE users_no = #{userNo}
  </select>
  
  <!-- resultMap 정의 -->
  <resultMap type="manager" id="managerMap">
    <id column="users_no" property="usersNo" />
    <result column="department" property="department" />
    <result column="job_title" property="jobTitle" />
  </resultMap>
</mapper>
