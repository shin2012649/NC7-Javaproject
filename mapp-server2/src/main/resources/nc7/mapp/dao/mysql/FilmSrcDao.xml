<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.mapp.dao.FilmSrcDao">

  <!-- 영화 소스 정보 조회 -->
  <select id="findByFilmNo" parameterType="int" resultMap="filmSrcMap">
    SELECT
      fs.src_no,
      s.name AS src_name
    FROM
      films_src fs INNER JOIN src s ON fs.src_no = s.src_no
    WHERE
      fs.films_no = #{filmNo}
  </select>
  
  <!-- 영화 소스 정보 삽입 -->
  <insert id="insert" parameterType="filmSrc">
    INSERT INTO films_src(films_no, src_no)
    VALUES(#{film.filmsNo}, #{src.srcNo})
  </insert>
  
  <!-- 영화 소스 정보 삭제 -->
  <delete id="deleteByFilmNo" parameterType="int">
    DELETE FROM films_src
    WHERE films_no = #{filmNo}
  </delete>
  
  <!-- resultMap 정의 -->
  <resultMap type="filmSrc" id="filmSrcMap">
    <id column="src_no" property="srcNo" />
    <result column="src_name" property="name" />
  </resultMap>
</mapper>
