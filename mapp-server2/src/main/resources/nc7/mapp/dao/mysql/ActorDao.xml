<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.mapp.dao.ActorDao">

  <resultMap type="nc7.mapp.vo.Actor" id="actorMap">
    <id column="actors_no" property="no"/>
    <result column="name" property="name"/>
    <result column="image_url" property="imageUrl"/>
  </resultMap>

  <insert id="insert" parameterType="nc7.mapp.vo.Actor">
    INSERT INTO actors (name, image_url)
    VALUES (#{name}, #{imageUrl})
  </insert>

  <select id="findByActorsNo" parameterType="int" resultMap="actorMap">
    SELECT actors_no, name, image_url
    FROM actors
    WHERE actors_no = #{actorsNo}
  </select>

  <select id="findAll" resultMap="actorMap">
    SELECT actors_no, name, image_url
    FROM actors
  </select>

  <update id="update" parameterType="nc7.mapp.vo.Actor">
    UPDATE actors
    SET name = #{name}, image_url = #{imageUrl}
    WHERE actors_no = #{no}
  </update>

  <delete id="delete" parameterType="int">
    DELETE FROM actors
    WHERE actors_no = #{actorsNo}
  </delete>

</mapper>
