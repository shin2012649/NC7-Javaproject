<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.CommentLikeDao">

  <!-- CommentLike 객체를 위한 resultMap 설정 -->
  <resultMap type="commentLike" id="commentLikeMap">
    <id column="comments_no" property="commentNo"/>
    <id column="users_no" property="userNo"/>
  </resultMap>

  <!-- CommentLike 등록 -->
  <insert id="insert" parameterType="commentLike">
    insert into comments_like(comments_no, users_no)
    values(#{commentNo}, #{userNo})
  </insert>

  <!-- CommentLike 삭제 -->
  <delete id="delete" parameterType="map">
    delete from comments_like
    where comments_no = #{commentNo}
    and users_no = #{userNo}
  </delete>

</mapper>
