<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.GenreDao">

  <!-- 모든 장르 조회 -->
  <select id="findAll" resultMap="genreMap">
    select * from genres
  </select>
  
  <!-- resultMap 정의 -->
  <resultMap type="genre" id="genreMap">
    <id column="genres_no" property="genresNo" />
    <result column="name" property="name" />
  </resultMap>
</mapper>
