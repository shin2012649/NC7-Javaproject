<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.CountryDao">

  <!-- Country 객체를 위한 resultMap 설정 -->
  <resultMap type="country" id="countryMap">
    <id column="countries_no" property="countryNo"/>
    <result column="name" property="name"/>
  </resultMap>

  <!-- 모든 국가 조회 -->
  <select id="findAll" resultType="country" resultMap="countryMap">
    select countries_no, name
    from countries
  </select>

  <!-- 국가 번호로 조회 -->
  <select id="findByCountryNo" parameterType="string" resultType="country" resultMap="countryMap">
    select countries_no, name
    from countries
    where countries_no = #{countryNo}
  </select>

  <!-- 국가 이름으로 조회 -->
  <select id="findByName" parameterType="string" resultType="country" resultMap="countryMap">
    select countries_no, name
    from countries
    where name = #{name}
  </select>

  <!-- Country 등록 -->
  <insert id="insert" parameterType="country">
    insert into countries(countries_no, name)
    values(#{countryNo}, #{name})
  </insert>

  <!-- Country 수정 -->
  <update id="update" parameterType="country">
    update countries
    set name = #{name}
    where countries_no = #{countryNo}
  </update>

  <!-- Country 삭제 -->
  <delete id="delete" parameterType="string">
    delete from countries
    where countries_no = #{countryNo}
  </delete>

</mapper>
