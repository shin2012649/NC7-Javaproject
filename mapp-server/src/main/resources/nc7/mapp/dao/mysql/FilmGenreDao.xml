<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.FilmGenreDao">

  <!-- 영화 장르 정보 조회 -->
  <select id="findByFilmId" parameterType="int" resultMap="filmGenreMap">
    select
      fg.films_genres_no,
      fg.genres_no,
      g.name as genre_name
    from
      films_genres fg inner join genres g on fg.genres_no = g.genres_no
    where
      fg.films_no = #{filmNo}
  </select>
  
  <!-- 영화 장르 정보 삽입 -->
  <insert id="insert" parameterType="filmGenre">
    insert into films_genres(films_no, genres_no)
    values(#{film.filmsNo}, #{genre.genresNo})
  </insert>
  
  <!-- 영화 장르 정보 삭제 -->
  <delete id="delete" parameterType="int">
    delete from films_genres
    where films_no = #{filmNo}
  </delete>
  
  <!-- resultMap 정의 -->
  <resultMap type="filmGenre" id="filmGenreMap">
    <id column="films_genres_no" property="filmsGenresNo" />
    <association property="genre" javaType="genre">
      <id column="genres_no" property="genresNo" />
      <result column="genre_name" property="name" />
    </association>
  </resultMap>
</mapper>
