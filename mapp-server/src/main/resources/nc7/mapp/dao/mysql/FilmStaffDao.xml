<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.FilmStaffDao">

  <!-- 영화 스텝 정보 조회 -->
  <select id="findByFilmId" parameterType="int" resultMap="filmStaffMap">
    select
      fs.films_staff_no,
      fs.role,
      fs.position,
      s.staff_no,
      s.name as staff_name
    from
      films_staff fs inner join staff s on fs.staff_no = s.staff_no
    where
      fs.films_no = #{filmNo}
  </select>
  
  <!-- 영화 스텝 정보 삽입 -->
  <insert id="insert" parameterType="filmStaff">
    insert into films_staff(films_no, staff_no, role, position)
    values(#{film.filmsNo}, #{staff.staffNo}, #{role}, #{position})
  </insert>
  
  <!-- 영화 스텝 정보 삭제 -->
  <delete id="delete" parameterType="int">
    delete from films_staff
    where films_staff_no = #{filmStaffNo}
  </delete>
  
  <!-- resultMap 정의 -->
  <resultMap type="filmStaff" id="filmStaffMap">
    <id column="films_staff_no" property="filmsStaffNo" />
    <result column="role" property="role" />
    <result column="position" property="position" />
    <association property="staff" javaType="staff">
      <id column="staff_no" property="staffNo" />
      <result column="staff_name" property="name" />
    </association>
  </resultMap>
</mapper>
