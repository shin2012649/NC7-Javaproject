<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.StaffDao">

  <!-- 모든 스태프 정보 조회 -->
  <select id="findAll" resultMap="staffMap">
    select * from staff
  </select>
  
  <!-- 스태프 정보 조회 by 스태프 번호 -->
  <select id="findById" parameterType="int" resultMap="staffMap">
    select * from staff where staff_no = #{staffId}
  </select>
  
  <!-- resultMap 정의 -->
  <resultMap type="staff" id="staffMap">
    <id column="staff_no" property="staffId" />
    <result column="name" property="name" />
    <result column="image_url" property="imageUrl" />
  </resultMap>
</mapper>
