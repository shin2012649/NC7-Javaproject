<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.WatchListDao">

  <!-- 특정 사용자의 관심 목록 조회 -->
  <select id="findByUserId" parameterType="int" resultMap="watchListMap">
    select * from watch_lists where users_no = #{userId}
  </select>
  
  <!-- resultMap 정의 -->
  <resultMap type="watch_list" id="watchListMap">
    <id property="user.userId" column="users_no" />
    <id property="film.filmId" column="films_no" />
  </resultMap>
</mapper>
