<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.mapp.dao.UserDao">

  <!-- 사용자 정보 추가 -->
  <insert id="insert" parameterType="nc7.mapp.vo.User">
    INSERT INTO users (name, password, email, profile_image_url, date_of_birth, created_at)
    VALUES (#{name}, #{password}, #{email}, #{profileImageUrl}, #{dateOfBirth}, #{createdAt})
  </insert>
  
  <!-- 사용자 정보 조회 by 사용자 번호 -->
  <select id="findBy" parameterType="int" resultMap="userMap">
    SELECT * FROM users WHERE users_no = #{usersNo}
  </select>
  
  <!-- 이메일과 비밀번호로 사용자 정보 조회 -->
  <select id="findByEmailAndPassword" parameterType="nc7.mapp.vo.User" resultMap="userMap">
    SELECT * FROM users WHERE email = #{email} AND password = #{password}
  </select>
  
  <!-- 사용자 정보 수정 -->
  <update id="update" parameterType="nc7.mapp.vo.User">
    UPDATE users
    SET name = #{name}, password = #{password}, email = #{email},
        profile_image_url = #{profileImageUrl}, date_of_birth = #{dateOfBirth}, created_at = #{createdAt}
    WHERE users_no = #{usersNo}
  </update>
  
  <!-- 사용자 정보 삭제 -->
  <delete id="delete" parameterType="int">
    DELETE FROM users WHERE users_no = #{usersNo}
  </delete>
  
  <!-- 모든 사용자 정보 조회 -->
  <select id="findAll" resultMap="userMap">
    SELECT * FROM users
  </select>
  
  <!-- resultMap 정의 -->
  <resultMap type="nc7.mapp.vo.User" id="userMap">
    <id column="users_no" property="userId" />
    <result column="name" property="name" />
    <result column="password" property="password" />
    <result column="email" property="email" />
    <result column="profile_image_url" property="profileImageUrl" />
    <result column="date_of_birth" property="dateOfBirth" />
    <result column="created_at" property="createdAt" />
  </resultMap>
</mapper>
