<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.FilmSrcDao">

  <!-- 영화 소스 정보 조회 -->
  <select id="findByFilmId" parameterType="int" resultMap="filmSrcMap">
    select
      fs.src_no,
      s.name as src_name
    from
      films_src fs inner join src s on fs.src_no = s.src_no
    where
      fs.films_no = #{filmNo}
  </select>
  
  <!-- 영화 소스 정보 삽입 -->
  <insert id="insert" parameterType="filmSrc">
    insert into films_src(films_no, src_no)
    values(#{film.filmsNo}, #{src.srcNo})
  </insert>
  
  <!-- 영화 소스 정보 삭제 -->
  <delete id="delete" parameterType="int">
    delete from films_src
    where films_no = #{filmNo}
  </delete>
  
  <!-- resultMap 정의 -->
  <resultMap type="filmSrc" id="filmSrcMap">
    <id column="src_no" property="srcNo" />
    <result column="src_name" property="name" />
  </resultMap>
</mapper>
