<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.SrcDao">

  <!-- 모든 소스 정보 조회 -->
  <select id="findAll" resultMap="srcMap">
    select * from src
  </select>
  
  <!-- 소스 정보 조회 by 소스 번호 -->
  <select id="findById" parameterType="int" resultMap="srcMap">
    select * from src where src_no = #{srcId}
  </select>
  
  <!-- resultMap 정의 -->
  <resultMap type="src" id="srcMap">
    <id column="src_no" property="srcId" />
    <result column="name" property="name" />
  </resultMap>
</mapper>
