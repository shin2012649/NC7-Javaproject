<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nc7.javaproject.dao.FilmCountryDao">

  <!-- 영화 국가 정보 삽입 -->
  <insert id="insert" parameterType="nc7.javaproject.model.FilmCountry">
    insert into films_countries(films_no, countries_no)
    values(#{filmNo}, #{countryNo})
  </insert>

  <!-- 특정 영화의 국가 정보 조회 -->
  <select id="findByFilm" parameterType="int" resultType="nc7.javaproject.model.FilmCountry">
    select films_no, countries_no
    from films_countries
    where films_no = #{filmNo}
  </select>
  
  <!-- 특정 국가의 영화 정보 조회 -->
  <select id="findByCountry" parameterType="String" resultType="nc7.javaproject.model.FilmCountry">
    select films_no, countries_no
    from films_countries
    where countries_no = #{countryNo}
  </select>
  
  <!-- 영화 국가 정보 삭제 -->
  <delete id="delete" parameterType="nc7.javaproject.model.FilmCountry">
    delete from films_countries
    where films_no = #{filmNo}
      and countries_no = #{countryNo}
  </delete>
</mapper>
